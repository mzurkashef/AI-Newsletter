# AI Newsletter - Environment Variables Example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Telegram Bot Configuration (REQUIRED)
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234:abcd

# Telegram Channel/Chat ID (REQUIRED)
# Channel ID or chat ID where newsletters will be delivered
TELEGRAM_CHAT_ID=https://t.me/yourchatid

# AI Service Configuration
# AI_SERVICE_TYPE options: 'ollama', 'huggingface', 'groq', 'local'
# For zero-cost operation, use 'ollama' (self-hosted) or 'huggingface' (free tier)
AI_SERVICE_TYPE=ollama

# AI API Key (OPTIONAL - only needed for Hugging Face or Groq)
# Leave empty if using Ollama (self-hosted) or local models
AI_API_KEY=1234abcd.4321dcba

# AI Model Path/Name (OPTIONAL)
# For Ollama: model name (e.g., 'llama2', 'mistral')
# For Hugging Face: model identifier (e.g., 'meta-llama/Llama-2-7b-chat-hf')
# For local: path to model file
AI_MODEL_PATH=llama2

# Database Configuration (OPTIONAL - defaults shown)
# SQLite database file path (relative to project root)
DATABASE_PATH=data/newsletter.db

# Logging Configuration (OPTIONAL - defaults shown)
# Log file directory (relative to project root)
LOG_DIR=logs

# Application Settings (OPTIONAL)
# Newsletter delivery day (0=Monday, 6=Sunday)
DELIVERY_DAY=0

# Time window for content collection (days)
CONTENT_WINDOW_DAYS=7
